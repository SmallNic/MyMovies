<script>
var details = '{{{details}}}'
</script>

<div class="row movie-details" ng-controller="DetailsCtrl">

    <div class="column column-4 poster">
      <div>
        <button ng-click="addPoster(details)">Add to Favorites</button>
      </div>
      <img ng-src="\{{details.Poster}}">
    </div>

    <div class="column column-4 details">
      <ul>
        <li>Full Title: \{{details.Title}}</li>
        <li>Released: \{{details.Released}}</li>
        <li>Runtime: \{{details.Runtime}}</li>
        <li>Genre: \{{details.Genre}}</li>
        <li>Director: \{{details.Director}}</li>
        <li>Writer: \{{details.Writer}}</li>
        <li>Actors: \{{details.Actors}}</li>
        <li>Plot: \{{details.Plot}}</li>
        <li>Language: \{{details.Language}}</li>
      </ul>
    </div>

    <div class="column column-4">
      <div class="movie-search">
        <h2>Search For Movie</h2>
        <div class="form-info">
          <form method="post" action="/details">
            <input type="text" name="title" id="userInput" placeholder="E.g., The Matrix" ng-model="titleQuery">
            <input id="submit" type="submit">
          </form>
        </div>
      </div>
    </div>


</div>
